<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_1"
    >
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/tvEmail"
            android:text="Name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/tvPhoneNumber"
            android:text="Email"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:hint="Phone number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/buttons"
            android:text="Reset password"
            />

        <ImageView
            android:id="@+id/editName"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvFullName"
            android:layout_above="@+id/tvEmail"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_edit_24"
            />
        <ImageView
            android:id="@+id/editEmail"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvEmail"
            android:layout_above="@+id/tvPhoneNumber"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_edit_24"
            />
        <ImageView
            android:id="@+id/btnPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tvPhoneNumber"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
</RelativeLayout>