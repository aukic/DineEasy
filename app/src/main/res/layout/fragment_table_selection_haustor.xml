<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:src="@drawable/door90"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/table1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat2green"
        android:text="T1"
        android:textSize="25dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/table2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat4green"
        android:layout_alignParentRight="true"
        android:text="T2"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/table3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/kvadrat2green"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/table1"
        android:text="T3"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/table6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/kvadrat4green"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:text="T6"
        android:textSize="25dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/table4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/kvadrat4green"
        android:layout_alignParentRight="true"
        android:layout_below="@id/table2"
        android:text="T4"
        android:textSize="25dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/table5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat4green"
        android:layout_alignParentRight="true"
        android:layout_above="@id/table6"
        android:text="T5"
        android:textSize="25dp"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/redtable1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat2red"
        android:visibility="invisible"
        android:text="T1"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/redtable2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat4red"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:text="T2"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/redtable3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/kvadrat2red"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/redtable1"
        android:visibility="invisible"
        android:text="T3"
        android:textSize="25dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/redtable6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/kvadrat4red"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:text="T6"
        android:textSize="25dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/redtable4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/kvadrat4red"
        android:layout_alignParentRight="true"
        android:layout_below="@id/table2"
        android:visibility="invisible"
        android:text="T4"
        android:textSize="25dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/redtable5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:background="@drawable/kvadrat4red"
        android:layout_alignParentRight="true"
        android:layout_above="@id/table6"
        android:visibility="invisible"
        android:text="T5"
        android:textSize="25dp"
        android:gravity="center"
        />
</RelativeLayout>